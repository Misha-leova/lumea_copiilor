<style>
    /* Hero Banner */
    .hero-banner {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        overflow: hidden;
        position: relative;
    }

    .animated-float {
        animation: float 6s ease-in-out infinite;
        box-shadow: 0 15px 30px rgba(0,0,0,0.15);
    }

    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0px); }
    }

    /* Categorii */
    .category-card {
        border: none;
        background-color: white;
        transition: all 0.3s;
    }

    .category-card:hover {
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .see-all-btn {
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
        font-weight: bold;
        padding: 10px 30px;
    }

    .see-all-btn:hover {
        background-color: var(--primary-color);
        color: white;
    }

    /* Promo Banner */
    .promo-banner {
        background: linear-gradient(135deg, #FF416C, #FF4B2B);
        overflow: hidden;
    }

    .discount-badge {
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 150px;
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin: 0 auto;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% { transform: scale(1); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.5); }
        70% { transform: scale(1.05); box-shadow: 0 0 0 20px rgba(255, 255, 255, 0); }
        100% { transform: scale(1); }
    }

    /* Produse */
    .product-card {
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s;
        overflow: hidden;
        position: relative;
    }

    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 25px rgba(0,0,0,0.1);
    }

    .badge-new {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: var(--accent-color);
        color: var(--dark-color);
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    .product-title {
        height: 48px;
        overflow: hidden;
        margin-bottom: 10px;
    }

    .price-new {
        color: var(--primary-color);
        font-weight: bold;
        font-size: 1.2rem;
    }

    /* Vârstă și branduri */
    .age-section, .brands-section {
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        height: 100%;
    }

    .age-category {
        padding: 10px;
        border-radius: 10px;
        transition: all 0.3s;
    }

    .age-category:hover {
        background-color: rgba(255, 107, 107, 0.1);
    }

    .age-icon {
        color: var(--primary-color);
    }

    .brand-logo {
        border: 1px solid #eee;
        border-radius: 10px;
        transition: all 0.3s;
    }

    .brand-logo:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    /* Features */
    .features-section {
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .feature-icon {
        color: var(--primary-color);
    }

    .feature-item {
        padding: 20px;
        transition: all 0.3s;
    }

    .feature-item:hover {
        transform: translateY(-5px);
    }

    /* Testimoniale */
    .testimonial-card {
        background-color: white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transition: all 0.3s;
    }

    .testimonial-card:hover {
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .testimonial-text {
        font-style: italic;
        line-height: 1.6;
    }

    /* Newsletter */
    .newsletter-section {
        background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
    }
</style>